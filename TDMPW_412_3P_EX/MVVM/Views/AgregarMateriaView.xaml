<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             x:Class="TDMPW_412_3P_EX.MVVM.Views.AgregarMateriaView"
             Title="AgregarMateriaView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <input:FormView>
            <input:AdvancedEntry Title="Nombre">
                <input:AdvancedEntry.Validations>
                    <validation:RequiredValidation />
                    <validation:MinLengthValidation MinLength="5" />
                </input:AdvancedEntry.Validations>
            </input:AdvancedEntry>
            <Button Text="Agregar" input:FormView.IsSubmitButton="True" />
        </input:FormView>

    </VerticalStackLayout>
</ContentPage>